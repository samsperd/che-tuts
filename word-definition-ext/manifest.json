{
    "name": "Word Definition from Urban Dictionary EXT",
    "manifest_version": 2,
    "version": "0.001",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup/popup.html",
        "default_title": "Look up a definition"
    }
}

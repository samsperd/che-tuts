{
    "name": "Popups-paragraph replacer",
    "manifest_version": 2,
    "version": "0.001",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],

    "permissions": ["tabs"],

    "browser_action": {
        "default_icon": "logo512.png",
        "default_popup": "popup/popup.html",
        "default_title": "A popup will come here"
    }
}
